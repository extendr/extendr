# Compute Rust target from WIN variable (32 or 64)
# This mapping is needed because cargo builds to target-specific directories
RUST_TARGET = $(subst 64,x86_64,$(subst 32,i686,$(WIN)))-pc-windows-gnu

TARGET_DIR = ./rust/target
LIBDIR = $(TARGET_DIR)/$(RUST_TARGET)/debug
STATLIB = $(LIBDIR)/libextendrtests.a
PKG_LIBS = -L$(LIBDIR) -lextendrtests -lws2_32 -ladvapi32 -luserenv -lbcrypt -lntdll

WRAPPERS_C = extendrtests-wrappers.c
WRAPPERS_DIR = $(LIBDIR)/wrappers

all: $(SHLIB) wrappers cleanup

$(SHLIB): $(STATLIB)

$(STATLIB):
	# Create empty libgcc_eh.a to satisfy rustc linker requirements.
	# Rtools' GCC doesn't have libgcc_eh due to its compilation settings.
	# See: https://github.com/r-windows/rtools-packages/blob/2407b23f1e0925bbb20a4162c963600105236318/mingw-w64-gcc/PKGBUILD#L313-L316
	mkdir -p $(TARGET_DIR)/libgcc_mock
	touch $(TARGET_DIR)/libgcc_mock/libgcc_eh.a
	# CARGO_LINKER is provided in Makevars.ucrt for R >= 4.2
	export CARGO_TARGET_X86_64_PC_WINDOWS_GNU_LINKER="$(CARGO_LINKER)" && \
		export LIBRARY_PATH="$${LIBRARY_PATH};$(CURDIR)/$(TARGET_DIR)/libgcc_mock" && \
		cargo build --quiet --lib --manifest-path=./rust/Cargo.toml --target-dir $(TARGET_DIR) --target $(RUST_TARGET) --color=always

# Build the wrappers shlib for development use (optional).
# Uses EXTENDR_BUILDING_WRAPPERS to prevent infinite recursion when R CMD SHLIB
# invokes make with this Makevars.
wrappers: $(STATLIB)
	@if [ -z "$${EXTENDR_BUILDING_WRAPPERS}" ] && [ -f "$(WRAPPERS_C)" ]; then \
		mkdir -p $(WRAPPERS_DIR); \
		EXTENDR_BUILDING_WRAPPERS=1 R CMD SHLIB -o $(WRAPPERS_DIR)/extendrtests.dll $(WRAPPERS_C) $(PKG_LIBS); \
		rm -f extendrtests-wrappers.o; \
	fi

# Remove static libraries after linking to avoid R CMD check warnings about
# symbols in intermediate build artifacts (abort, exit, etc from Rust stdlib).
# The final .dll already contains everything needed.
cleanup: $(SHLIB) wrappers
	rm -f $(LIBDIR)/*.rlib $(LIBDIR)/*.a 2>/dev/null || true
	rm -f $(LIBDIR)/deps/*.rlib $(LIBDIR)/deps/*.a 2>/dev/null || true

clean:
	rm -Rf $(SHLIB) $(STATLIB) $(OBJECTS) $(TARGET_DIR) extendrtests_wrappers.*
